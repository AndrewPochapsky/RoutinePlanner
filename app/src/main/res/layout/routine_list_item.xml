<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/routine_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/darker_gray"
        app:cardCornerRadius="7dp"
        android:layout_margin="5dp"
        app:contentPaddingLeft="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical|start">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textSize="42sp"
                    android:id="@+id/routine_name"
                    android:textColor="@android:color/white"
                    android:text="@string/placeholder"/>
                <!--TODO: Consider switching ImageView to ImageSwitcher for animations(in this case also just rotate the image instead of switching it)-->
                <ImageView
                    android:id="@+id/cardview_arrow"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_keyboard_arrow_up_black"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@android:color/white"
                    android:text="Interval:"/>
                <TextView
                    android:id="@+id/routine_interval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@android:color/white"
                    android:text="5 day(s)"/>

            </LinearLayout>
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@android:color/white"
                    android:text="Next:"/>
                <TextView
                    android:id="@+id/routine_next_occurrence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:textColor="@android:color/white"
                    android:text="0000/07/04"/>
            </LinearLayout>-->
            <LinearLayout
                android:id="@+id/expandable_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <Button
                    android:id="@+id/routine_interact_button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Interact"/>
                <Button
                    android:id="@+id/routine_edit_button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Edit"/>
                <Button
                    android:id="@+id/routine_delete_button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Delete"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>




</FrameLayout>